{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.json"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!**/.next/cache/**", "**/dist/**", "**/storybook-static/**"]
        },
        "clean": {
            "cache": false,
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["build"]
        },
        "start": {
            "dependsOn": ["build"]
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**"]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["build", "^typecheck"]
        }
    }
}
