{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalDependencies": ["tsconfig.json", "package.json"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "lib/**",
                "storybook-static/**",
                "packages/**/package.json"
            ]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "cache": false,
            "outputs": [""]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^typecheck"]
        },
        "start": {
            "dependsOn": ["^build"],
            "outputs": []
        }
    }
}
