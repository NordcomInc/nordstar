{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "bun.lockb",
        "tsconfig.json",
        "**/tsconfig.json",
        "vite.config.ts",
        "**/vite.config.ts",
        "package.json",
        "**/package.json"
    ],
    "pipeline": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!**/.next/cache/**", "**/dist/**"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "start": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^typecheck"]
        }
    }
}
