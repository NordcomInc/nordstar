{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.json", "**/tsconfig.json", "**/*.json", "vite.config.ts", "**/vite.config.ts"],
    "pipeline": {
        "build": {
            "cache": false,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!**/.next/cache/**", "!**/coverage/**", "dist/**", "storybook-static/**"]
        },
        "clean": {
            "cache": false,
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "start": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "test": {
            "cache": false,
            "dependsOn": ["build"],
            "outputs": ["coverage/**"]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^typecheck"]
        }
    }
}
