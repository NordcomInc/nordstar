{
    "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
    "default": true,
    "spaces": true,
    "no-hard-tabs": true,
    "no-trailing-punctuation": {
        "punctuation": ".,;:!。，；：！"
    },
    "list-marker-space": {
        "ol_single": 1,
        "ol_multi": 1,
        "ul_single": 1,
        "ul_multi": 1
    },
    "ul-indent": {
        "indent": 1,
        "start_indent": 1,
        "start_indented": true
    },
    "line-length": false,
    "first-line-heading": false
}
