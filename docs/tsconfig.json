{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "incremental": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "esModuleInterop": true
    },
    "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts", "next.config.mjs"],
    "exclude": ["node_modules"]
}
