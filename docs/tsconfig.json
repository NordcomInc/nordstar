{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "incremental": true,
        "jsx": "preserve",
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "plugins": [{ "name": "next" }]
    },
    "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
