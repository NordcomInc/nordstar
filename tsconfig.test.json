{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "noEmit": true,
        "strictNullChecks": true,
        "types": ["vitest/globals", "@testing-library/react", "happy-dom"]
    },
    "include": [
        "packages/**/*.test.*",
        "packages/**/*.stories.*",
        "packages/vitest.config.ts",
        "vitest.config.ts",
        "vitest.setup.ts",
        "vitest.workspace.ts"
    ],
    "exclude": [
        "**/.next",
        "**/.turbo",
        "**/build",
        "**/coverage",
        "**/dist",
        "**/node_modules",
        "**/public",
        "**/storybook-static",
    ]
}
