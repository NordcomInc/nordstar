{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": ["vitest/globals", "@testing-library/react", "happy-dom"],
        "noEmit": true
    },
    "include": ["packages/**/*.test.*", "apps/**/*.test.*", "vitest.config.ts"],
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/.turbo",
        "**/storybook-static",
        "**/coverage",
        "**/build",
        "**/public"
    ]
}
